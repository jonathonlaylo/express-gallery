<div class="detailsView">
  {{#if galleryPhoto}}
  <div class="galleryPhoto">
    <p>
      <a href="/gallery/{{galleryPhoto.id}}">
        <img src="{{galleryPhoto.link}}">
      </a>
    </p>
    <p>
      {{galleryPhoto.author}}
        <br>
      {{galleryPhoto.description}}
    </p>
    <br>
    <form action="/gallery/{{galleryPhoto.id}}/edit" method="get">
      <button type="submit">Edit Photo</button>
    </form>
    <form action="/gallery/{{galleryPhoto.id}}?_method=DELETE" method="OST">
      <button type="submit">Delete Photo</button>
    </form>
  </div>
  {{/if}}

  <div class="detailsRight">
  {{#each galleryPhotos}}
    <div class="galleryPhotos">
      <a href="/gallery/{{id}}">
        <img src="{{link}}">
      </a>
    </div>
  {{/each}}
  </div>
</div>